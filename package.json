{
    "name": "oryxjs",
    "version": "1.2.0",
    "description": "OryxJS is a lightweight, modular, and scalable TypeScript-based framework",
    "keywords": [
        "framework",
        "backend",
        "typescript",
        "typeorm",
        "socket"
    ],
    "homepage": "https://github.com/oryx-js/app#readme",
    "bugs": {
        "url": "https://github.com/oryx-js/app/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/oryx-js/app.git"
    },
    "license": "MIT",
    "author": "Refkinscallv <refkinscallv@gmail.com>",
    "main": "build/main.js",
    "scripts": {
        "tsc-init": "npx tsc --init",
        "eslint-init": "npx eslint --init",
        "build": "npx tsc",
        "start": "node -r module-alias/register dist/main.js",
        "dev": "nodemon -r tsconfig-paths/register --exec ts-node src/main.ts",
        "lint": "eslint . --ext .ts,.js",
        "lint-fix": "eslint . --ext .ts,.js --fix",
        "format": "prettier --ignore-path .prettierignore --write src/**/*.ts"
    },
    "dependencies": {
        "axios": "^1.8.4",
        "bcrypt": "^5.1.1",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "dotenv": "^16.4.7",
        "ejs": "^3.1.10",
        "express": "^4.21.2",
        "ioredis": "^5.6.0",
        "jsonwebtoken": "^9.0.2",
        "lodash": "^4.17.21",
        "module-alias": "^2.2.3",
        "mysql2": "^3.14.0",
        "reflect-metadata": "^0.2.2",
        "socket.io": "^4.8.1",
        "typeorm": "^0.3.21",
        "validator": "^13.12.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.23.0",
        "@types/bcrypt": "^5.0.2",
        "@types/chalk": "^0.4.31",
        "@types/cookie-parser": "^1.4.8",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.1",
        "@types/ioredis": "^4.28.10",
        "@types/jsonwebtoken": "^9.0.9",
        "@types/lodash": "^4.17.16",
        "@types/node": "^22.13.11",
        "@types/validator": "^13.12.2",
        "eslint": "^9.23.0",
        "eslint-config-prettier": "^10.1.1",
        "eslint-plugin-prettier": "^5.2.3",
        "globals": "^16.0.0",
        "nodemon": "^3.1.9",
        "prettier": "^3.5.3",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.8.2",
        "typescript-eslint": "^8.28.0"
    },
    "_moduleAliases": {
        "@core": "./dist/core",
        "@app": "./dist/app",
        "@type": "./dist/types",
        "@root": "./"
    }
}
